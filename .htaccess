# Enable the RewriteEngine
RewriteEngine On

# Redirect requests to the root URL to index.php
RewriteRule ^$ index.php [L]

# Remove .php extension from URLs (if needed)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Optional: Redirect requests with .php extension to the clean URL
RewriteCond %{https://santafeport.com/admin/index.php} \s([^.]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]