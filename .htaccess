RewriteEngine On

# Redirect /mcc-admin to /admin/index.php
RewriteCond %{REQUEST_URI} ^/mcc-admin$
RewriteRule ^mcc-admin$ /admin/index.php [R=301,L]

# Redirect /admin to /index.php
RewriteCond %{REQUEST_URI} ^/admin$
RewriteRule ^admin$ /index.php [R=301,L]

# Optional: Remove .php extension for clean URLs
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# HTTP Security Headers
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "no-referrer-when-downgrade"
Header always set Permissions-Policy "geolocation=(), microphone=()"
